generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Kunder/Organisasjoner som bruker SportFlow Booking
model Organization {
  id            String   @id @default(cuid())
  
  // Kundeinformasjon
  name          String                          // "Haugesund IL"
  slug          String   @unique                // "haugesund-il"
  contactEmail  String
  contactName   String?
  contactPhone  String?
  
  // Lisensnøkkel (genereres automatisk, deles med kunden)
  licenseKey    String   @unique @default(cuid())
  
  // Lisenstype: "inactive", "pilot", "free", "standard"
  licenseType   String   @default("inactive")
  
  // Datoer
  createdAt     DateTime @default(now())
  activatedAt   DateTime?                       // Settes ved første validate-kall
  expiresAt     DateTime                        // Når abonnementet utløper
  graceEndsAt   DateTime?                       // Siste dag med begrenset tilgang
  
  // Status
  isActive      Boolean  @default(true)
  isSuspended   Boolean  @default(false)
  suspendReason String?
  
  // Begrensninger (null = bruk default fra licenseType)
  maxUsers      Int?
  maxResources  Int?
  
  // Statistikk rapportert fra appen
  lastHeartbeat DateTime?
  appVersion    String?
  totalUsers    Int      @default(0)
  totalBookings Int      @default(0)
  
  // Referanse til statistikk
  stats         OrganizationStats?
  
  // Notater
  notes         String?
  
  // Relasjoner
  validations   LicenseValidation[]
  modules       OrganizationModule[]
  invoices      Invoice[]
  
  @@index([licenseKey])
  @@index([isActive, expiresAt])
}

// Logg over alle lisensvalideringer
model LicenseValidation {
  id             String   @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  
  timestamp      DateTime @default(now())
  ipAddress      String?
  userAgent      String?
  appVersion     String?
  
  // Resultat: "valid", "expired", "grace", "invalid", "suspended"
  status         String
  
  // Rapportert fra app
  userCount      Int?
  bookingCount   Int?
  
  @@index([organizationId, timestamp])
  @@index([timestamp])
}

// Admin-brukere for lisensserver
model AdminUser {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String                              // bcrypt hash
  name      String?
  role      String   @default("admin")          // "super", "admin", "viewer"
  createdAt DateTime @default(now())
  lastLogin DateTime?
  
  // 2FA (TOTP med Google Authenticator)
  totpSecret    String?                         // Base32-encoded secret
  totpEnabled   Boolean  @default(false)        // Om 2FA er aktivert
  totpVerified  Boolean  @default(false)        // Om bruker har verifisert oppsett
}

// Moduler/funksjonaliteter som kan aktiveres for organisasjoner
model Module {
  id          String   @id @default(cuid())
  key         String   @unique                  // "booking", "pricing", "analytics", etc.
  name        String                            // "Booking", "Betalingsmodul", etc.
  description String?
  isStandard  Boolean  @default(false)          // Om modulen er standard (alltid inkludert)
  isActive    Boolean  @default(true)           // Om modulen er tilgjengelig for salg
  price       Int?                              // Månedspris for modulen (null = gratis/inkludert)
  
  // Relasjoner
  organizations OrganizationModule[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([key])
  @@index([isStandard])
}

// Relasjon mellom organisasjoner og moduler (many-to-many)
model OrganizationModule {
  id             String   @id @default(cuid())
  organizationId String
  moduleId       String
  isActive       Boolean  @default(true)
  activatedAt    DateTime @default(now())
  expiresAt      DateTime?                      // Hvis modulen har egen utløpsdato (f.eks. for trial)
  
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  module         Module       @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  
  @@unique([organizationId, moduleId])
  @@index([organizationId])
  @@index([moduleId])
}

// Priser for lisens-typer (overstyrer default fra license-config.ts)
model LicenseTypePrice {
  id          String   @id @default(cuid())
  licenseType String   @unique                  // "inactive", "pilot", "free", "standard"
  price       Int                               // Månedspris i kr
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([licenseType])
}

// Fakturaer for organisasjoner
model Invoice {
  id             String   @id @default(cuid())
  invoiceNumber  String   @unique                // Unikt fakturanummer (f.eks. "INV-2025-001")
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  
  // Periode som faktureres
  periodMonth    Int                              // Start-måned 1-12
  periodYear     Int                              // Start-år f.eks. 2025
  periodMonths   Int      @default(1)             // Antall måneder (1, 3, 6, 12)
  
  // Beløp
  amount         Int                              // Total beløp i kr (inkl. mva hvis aktuelt)
  basePrice      Int                              // Base-pris for lisens-type
  modulePrice    Int                              // Sum av modul-priser
  vatAmount      Int      @default(0)             // MVA (hvis aktuelt)
  
  // Status: "draft", "sent", "paid", "overdue", "cancelled"
  status         String   @default("draft")
  
  // Datoer
  invoiceDate    DateTime @default(now())         // Når fakturaen ble opprettet
  dueDate        DateTime                         // Forfallsdato
  paidDate       DateTime?                        // Når fakturaen ble betalt
  
  // Detaljer om hva som faktureres
  licenseType    String                           // Lisens-type ved fakturering
  licenseTypeName String                         // Navn på lisens-type
  modules        String?                          // JSON-string med moduler som ble fakturert
  
  // Notater
  notes          String?
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  @@index([organizationId])
  @@index([invoiceNumber])
  @@index([status])
  @@index([periodYear, periodMonth])
  @@index([dueDate])
}

// Detaljert statistikk fra SportFlow-apper
model OrganizationStats {
  id              String   @id @default(cuid())
  organizationId  String   @unique
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  
  // Brukerstatistikk
  totalUsers      Int      @default(0)
  activeUsers     Int      @default(0)           // Brukere innlogget siste 30 dager
  lastUserLogin   DateTime?                      // Sist en bruker logget inn
  
  // Fasiliteter og ressurser
  totalFacilities Int      @default(0)           // Antall fasiliteter
  totalCategories Int      @default(0)           // Antall kategorier
  
  // Bookinger
  totalBookings   Int      @default(0)           // Totalt antall bookinger
  bookingsThisMonth Int    @default(0)           // Bookinger denne måneden
  pendingBookings Int      @default(0)           // Ventende bookinger
  
  // Roller og tilgang
  totalRoles      Int      @default(0)           // Antall roller
  
  // Oppdatering
  lastUpdated     DateTime @default(now())       // Når statistikken sist ble oppdatert
  
  @@index([organizationId])
  @@index([lastUpdated])
}

// Bedriftsinformasjon for fakturaer og admin
model CompanySettings {
  id              String   @id @default(cuid())
  
  // Bedriftsinformasjon
  companyName     String                            // "SportFlow AS"
  orgNumber       String?                           // "999 888 777"
  vatNumber       String?                           // MVA-nummer
  
  // Kontaktinformasjon
  email           String?
  phone           String?
  website         String?
  
  // Adresse
  address         String?
  postalCode      String?
  city            String?
  country         String   @default("Norge")
  
  // Bankinformasjon
  bankAccount     String?                           // Kontonummer
  bankName        String?
  iban            String?                           // For internasjonale betalinger
  swift           String?
  
  // Logo (URL eller base64)
  logoUrl         String?
  
  // Faktura-innstillinger
  invoicePrefix   String   @default("INV")          // Prefix for fakturanummer
  defaultDueDays  Int      @default(14)             // Standard forfallsdager
  vatRate         Int      @default(0)              // MVA-sats i prosent (0 = ingen MVA)
  
  // Tekster for fakturaer
  invoiceNote     String?                           // Standard notat på fakturaer
  paymentTerms    String?                           // Betalingsbetingelser
  
  // E-post maler
  emailSubject    String?                           // E-post emne for fakturaer
  emailGreeting   String?                           // Hilsen i e-post ("Hei {customerName},")
  emailBody       String?                           // Hovedtekst i e-post
  emailFooter     String?                           // Signatur/footer i e-post
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
